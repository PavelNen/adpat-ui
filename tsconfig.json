{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
//    "module": "esnext",
//    "target": "es5",
//    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    // "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "example"]
}
